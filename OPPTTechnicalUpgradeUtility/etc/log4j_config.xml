<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="WarnAppender" class="org.apache.log4j.FileAppender">
		<param name="File" value="oppterr.log" />
		<param name="Threshold" value="Warn" />
		<layout class="com.ibm.support.oppt.projectutilities.logging.OPPTPatternLayout">
			<param name="ConversionPattern" value="[OPPT] [%C][%M] [%d{MM/dd HH:mm:ss}] [%p] %m%n"/>
		</layout>	
	</appender>
	
	<appender name="DebugAppender" class="org.apache.log4j.FileAppender">
		<param name="File" value="opptout.log" />
		<param name="Threshold" value="debug" />
		<layout class="com.ibm.support.oppt.projectutilities.logging.OPPTPatternLayout">
			<param name="ConversionPattern" value="[OPPT] [%C][%M] [%d{MM/dd HH:mm:ss}] [%p] [%s] %m%n"/>
		</layout>	
	</appender>

	<logger name="Fatal" additivity="false">
		<level value="fatal"></level>
		<appender-ref ref="WarnAppender"/>
	</logger>
	
	<logger name="Error" additivity="false">
		<level value="error"></level>
		<appender-ref ref="WarnAppender"/>
	</logger>
	
	<logger name="Warn" additivity="false">
		<level value="warn"></level>
		<appender-ref ref="WarnAppender"/>
	</logger>
	
	<logger name="Info" additivity="false">
		<level value="info"></level>
		<appender-ref ref="DebugAppender"/>
	</logger>
	
	<logger name="Debug" additivity="false">
		<level value="debug"></level>
		<appender-ref ref="DebugAppender"/>
	</logger>
	
	<root>
		<level value="info"></level>	
		<appender-ref ref="DebugAppender"/>
	</root>
</log4j:configuration>

